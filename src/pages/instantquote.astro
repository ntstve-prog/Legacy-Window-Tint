				userPhone = urlParams.get('phone');
				console.log('User phone from URL:', userPhone);
			})();

			// Initialize goal options
			document.addEventListener('DOMContentLoaded', function() {
				document.querySelectorAll('.goal-option').forEach(option => {
					option.addEventListener('click', function() {
						const checkbox = this.querySelector('input');
						if (!checkbox.checked) {
							this.classList.add('selected');
						} else {
							this.classList.remove('selected');
						}
					});

					// Set initial state
					const checkbox = option.querySelector('input');
					if (checkbox.checked) {
						option.classList.add('selected');
					}
				});

				// Initialize timeline options
				document.querySelectorAll('.timeline-option').forEach(option => {
					option.addEventListener('click', function() {
						document.querySelectorAll('.timeline-option').forEach(opt => opt.classList.remove('selected'));
						this.classList.add('selected');
					});
				});

				// Set initial timeline selection
				const checkedTimeline = document.querySelector('.timeline-option input:checked');
				if (checkedTimeline) {
					checkedTimeline.parentElement.classList.add('selected');
				}
			});

			// Add new window set
			window.addWindow = function() {
				windowCount++;
				const container = document.getElementById('windowsContainer');

				// Clone the first window entry to preserve all styling
				const template = document.querySelector('.window-entry[data-window="1"]');
				const newWindow = template.cloneNode(true);
				newWindow.dataset.window = windowCount;

				// Update the header
				const title = newWindow.querySelector('.window-entry-title');
				title.textContent = `Window Set ${windowCount}`;

				// Add remove button if it doesn't exist (first window doesn't have one)
				let removeBtn = newWindow.querySelector('.remove-btn');
				if (!removeBtn) {
					const header = newWindow.querySelector('.window-entry-header');
					removeBtn = document.createElement('span');
					removeBtn.className = 'remove-btn';
					header.appendChild(removeBtn);
				}
				removeBtn.textContent = '√ó Remove';
				removeBtn.onclick = () => removeWindow(windowCount);

				// Update all input names and clear values
				newWindow.querySelectorAll('input, select').forEach(input => {
					const baseName = input.name.replace(/\d+$/, '');
					input.name = baseName + windowCount;
					if (input.type === 'number') {
						input.value = input.name.includes('quantity') ? '1' : '';
					} else if (input.tagName === 'SELECT' && baseName === 'room') {
						input.value = ''; // Reset room selection
					}
				});

				// Update quick select buttons
				newWindow.querySelectorAll('.quick-btn').forEach((btn, index) => {
					const sizes = [[3,5], [4,6], [5,6], [6,8]];
					const [width, height] = sizes[index];
					btn.onclick = () => setWindowSize(windowCount, width, height);
				});

				container.appendChild(newWindow);
			}

			// Remove window set
			window.removeWindow = function(num) {
				const windowElement = document.querySelector(`[data-window="${num}"]`);
				if (windowElement) {
					windowElement.remove();
				}
			}

			// Quick size setter
			window.setWindowSize = function(windowNum, width, height) {
				document.querySelector(`[name="width${windowNum}"]`).value = width;
				document.querySelector(`[name="height${windowNum}"]`).value = height;
			}

			// Calculate price
			document.addEventListener('DOMContentLoaded', function() {
				document.getElementById('priceCalculator').addEventListener('submit', function(e) {
					e.preventDefault();

					let totalSqft = 0;
					let secondFloorSqft = 0;
					let highFloorSqft = 0;
					let windowsData = [];

					const baseRate = 14; // $14 per sqft
					const secondFloorExtra = 2; // $2 extra for second floor
					const highFloorExtra = 4; // $4 extra for high/difficult

					// Calculate for all window sets
					const windowEntries = document.querySelectorAll('.window-entry');

					windowEntries.forEach(entry => {
						const windowNum = entry.dataset.window;
						const width = parseFloat(document.querySelector(`[name="width${windowNum}"]`).value) || 0;
						const height = parseFloat(document.querySelector(`[name="height${windowNum}"]`).value) || 0;
						const quantity = parseInt(document.querySelector(`[name="quantity${windowNum}"]`).value) || 1;
						const floor = document.querySelector(`[name="floor${windowNum}"]`).value;
						const room = document.querySelector(`[name="room${windowNum}"]`)?.value || '';

						const sqft = width * height * quantity;
						totalSqft += sqft;

						if (floor === 'second') {
							secondFloorSqft += sqft;
						} else if (floor === 'high') {
							highFloorSqft += sqft;
						}

						// Collect detailed window data
						windowsData.push({
							set: parseInt(windowNum),
							room: room,
							width: width,
							height: height,
							quantity: quantity,
							floor: floor,
							sqft: sqft
						});
					});

					// Calculate pricing
					const basePrice = Math.round(totalSqft * baseRate);
					const secondFloorPrice = Math.round(secondFloorSqft * secondFloorExtra);
					const highFloorPrice = Math.round(highFloorSqft * highFloorExtra);
					const totalPrice = basePrice + secondFloorPrice + highFloorPrice;

					// Estimate monthly savings (approximately $1 per sqft per month)
					const monthlySavings = Math.round(totalSqft * 1);

					// Update display
					document.getElementById('totalSqft').textContent = totalSqft.toFixed(1);
					document.getElementById('basePrice').textContent = `$${basePrice.toLocaleString()}`;
					document.getElementById('totalPrice').textContent = `$${totalPrice.toLocaleString()}`;
					document.getElementById('finalPrice').textContent = `$${totalPrice.toLocaleString()}`;
					document.getElementById('monthlySavings').textContent = monthlySavings;

					// Show/hide additional charges
					if (secondFloorSqft > 0) {
						document.getElementById('secondFloorRow').style.display = 'flex';
						document.getElementById('secondFloorPrice').textContent = `$${secondFloorPrice.toLocaleString()}`;
					} else {
						document.getElementById('secondFloorRow').style.display = 'none';
					}

					if (highFloorSqft > 0) {
						document.getElementById('highFloorRow').style.display = 'flex';
						document.getElementById('highFloorPrice').textContent = `$${highFloorPrice.toLocaleString()}`;
					} else {
						document.getElementById('highFloorRow').style.display = 'none';
					}

					// Show price result
					document.getElementById('priceResult').classList.add('show');

					// Smooth scroll to results
					document.getElementById('priceResult').scrollIntoView({ behavior: 'smooth', block: 'center' });

					// Collect calculator data
					const calculatorData = {
						phone: userPhone,
						total_sqft: totalSqft,
						total_price: totalPrice,
						monthly_savings: monthlySavings,
